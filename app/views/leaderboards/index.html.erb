<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h3><%= page_title %></h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= t('leaderboard.player') %></th>
        <th scope="col"><%= t('leaderboard.total_game') %></th>
        <th scope="col"><%= t('leaderboard.average_score') %></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each.with_index(1) do |player, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= player.name %></td>
          <td><%= player.total_games_played %></td>
          <td><%= player.average_score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
