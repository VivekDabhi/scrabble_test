<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h3><%= t('player.show') %></h3>
</div>
<p id="notice"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @player.name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Email: <%= @player.email %></li>
    <li class="list-group-item">Phone Number: <%= @player.phone_number %></li>
    <li class="list-group-item">Total Games Wins: <%= @player.wins %></li>
    <li class="list-group-item">Total Games losses: <%= @player.losses %></li>
    <li class="list-group-item">Average Score: <%= @player.average_score %></li>
    <li class="list-group-item">
      Highest Score Details:
      <hr/>
      <% highest_score_details = @player.highest_score_details %>
      Highest score: <%= highest_score_details[:highest_score] %>
      <br/>
      Game: <%= highest_score_details[:game_name] %>
      <br/>
      Opponent: <%= highest_score_details[:opponent] %>
    </li>
  </ul>
</div>

<div class='row mt-3'>
  <div class="form-group col-md-6">
    <%= link_to 'Edit', edit_player_path(@player), class: 'btn btn-primary' %>
    <%= link_to t('back'), players_path, class: 'btn btn-secondary' %>
  </div>
</div>
