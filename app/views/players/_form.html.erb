<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= form.label :first_name %><span class='text-danger'>*</span>
    <%= form.text_field :first_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :last_name %><span class='text-danger'>*</span>
    <%= form.text_field :last_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :email %><span class='text-danger'>*</span>
    <%= form.text_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :phone_number %><span class='text-danger'>*</span>
    <%= form.text_field :phone_number, class: 'form-control', required: true %>
  </div>

  <div class='row mt-3'>
    <div class="form-group col-md-6">
      <%= form.submit t('submit'), class: 'btn btn-primary' %>
      <%= link_to t('back'), players_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
